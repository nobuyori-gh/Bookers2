<h1>User info</h1>

<%= form_for(@user) do |f| %>
	<div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control",
        	id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

	<div class="form-group has-icon">
    	<div class="user-edit-image">
    	</div>
    	<label class="control-label sr-only" for="inputEmail">Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<p>Introduction</p>
	<%= f.text_area :introduction %><br>
	<%= f.submit 'Update User', class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>