<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h2>User info</h2>

<%= form_for(@user) do |f| %>


	<div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name, class:"name",id:"user_name"%>
    </div>

	<div class="field">
    	<label for="user_image">Image</label>
    	<%= f.attachment_field :profile_image, class: "user-image" %>
	</div>

    <div class="field">
      <label class="introduction",for="user_introduction">Introduction</label>
	    <%= f.text_area :introduction %><br>
    <div class="actions">
	<%= f.submit 'Update User' %>
      <% end %>
    </div>
