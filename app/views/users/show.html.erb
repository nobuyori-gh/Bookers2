<!-- Homeボタン -->
<div class="row">
  <div class="col-xs-3">
	<%= render 'users/list',user:@user %>
	<%= render 'books/list',book:@book %>
  </div>

  <div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
	<thead>
	  <tr>
	  	<th></th>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	  </tr>
	</thead>
	  <tbody>
		<% @user.posts.each do |post| %>
		<tr>
		  <td><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg',class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
		  <td><%= link_to post.title,book_path(post) %></td> <!-- booksのshowへ -->
		  <td><%= post.body %></td>
		</tr>
		<% end %>
	  </tbody>
    </table>
  </div>
</div>