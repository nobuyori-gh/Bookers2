<div class="row">
  <div class="col-xs-3">
<!-- 部分テンプレート(User info&New book) -->
<%= render 'users/list',user:@user %>
<%= render 'books/list',book:@book %>
 </div>

 <div class="col-xs-9">
<!-- 投稿一覧 -->
<h1>Book detail</h1>

<table class="table">
	<thead>
		<tr>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
			  <%= link_to user_path(@book.user_id) do %>
			    <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
				<div class="masu"><%= @book.user.name %></div>
			  <% end %>
			</td>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
		 <% if current_user.id == @book.user_id %>
			<td><%= link_to "Edit",edit_book_path(@book), class:"btn-sm btn-success edit_book"%></td>
			<td><%= link_to "Destroy",book_path(@book), class:"btn-sm btn-danger destroy_book", method: :delete ,data:{ confirm: '本当に消しますか？'} %></td>
			<!-- method: :deleteはGETメソッドからDELETEメソッドへ指定 -->
			<!-- data:{confirm:''} はダイヤログ表示 -->
		 <% end %>
		</tr>
	</tbody>
</table>
</div>
</div>